    <mappers>
        <!-- resource的路径是相对于classpath-->
        <!--<mapper resource="com/xiaojihua/mapper/UserMapper.xml"/>-->

        <!-- 适用于接口代理的方式-->
        <!-- class方式
            要求mapper接口名称和mapper映射文件名称相同，且放在同一个目录中
        -->
        <mapper class="com.xiaojihua.mapper.UserMapper"/>
    </mappers>
</configuration>
